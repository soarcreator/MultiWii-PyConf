TextWidget:
<TextWidget>:
	BoxLayout:
		orientation: "vertical"
		size: root.size

		GridLayout:
		    size_hint_y: 2
			rows: 4
		    cols: 4

			Label:
				text: "RawData"
			Label:
				color: 1, 0.3, 0.3, 1
				text: "X"
			Label:
				color: 0.3, 1, 0.3, 1
				text: "Y"
			Label:
				color: 0.3, 0.3, 1, 1
				text: "Z"

			Label:
				text: "Acc"
			Label:
				color: 1, 0.3, 0.3, 1
				text: root.accXText
			Label:
				color: 0.3, 1, 0.3, 1
				text: root.accYText
			Label:
				color: 0.3, 0.3, 1, 1
				text: root.accZText

			Label:
				text: "Gyr"
			Label:
				color: 1, 0.3, 0.3, 1
				text: root.gyrXText
			Label:
				color: 0.3, 1, 0.3, 1
				text: root.gyrYText
			Label:
				color: 0.3, 0.3, 1, 1
				text: root.gyrZText

			Label:
				text: "Mag"
			Label:
				color: 1, 0.3, 0.3, 1
				text: root.magXText
			Label:
				color: 0.3, 1, 0.3, 1
				text: root.magYText
			Label:
				color: 0.3, 0.3, 1, 1
				text: root.magZText

		Label:
			text: root.angXText
		Label:
			text: root.angYText
		Label:
			text: root.headingText

		BoxLayout:
			orientation: "horizontal"

			BoxLayout:
				orientation: "vertical"
				BoxLayout:
					orientation: "horizontal"
					Label:
						text_size: (200, None)
						halign: "right"
						text: "Roll: "
					Label:
						text_size: (200, None)
						halign: "left"
						text: root.rollText
				Slider:
					min: 0.0
					max: 1.0
					value: 0.5
					on_touch_move: root.OnChangeRoll(self.value)

			BoxLayout:
				orientation: "vertical"
				BoxLayout:
					orientation: "horizontal"
					Label:
						text_size: (200, None)
						halign: "right"
						text: "Pitch: "
					Label:
						text_size: (200, None)
						halign: "left"
						text: root.pitchText
				Slider:
					min: 0.0
					max: 1.0
					value: 0.5
					on_touch_move: root.OnChangePitch(self.value)

			BoxLayout:
				orientation: "vertical"
				BoxLayout:
					orientation: "horizontal"
					Label:
						text_size: (200, None)
						halign: "right"
						text: "Yaw: "
					Label:
						text_size: (200, None)
						halign: "left"
						text: root.yawText
				Slider:
					min: 0.0
					max: 1.0
					value: 0.5
					on_touch_move: root.OnChangeYaw(self.value)

			BoxLayout:
				orientation: "vertical"
				BoxLayout:
					orientation: "horizontal"
					Label:
						text_size: (200, None)
						halign: "right"
						text: "Throttle: "
					Label:
						text_size: (200, None)
						halign: "left"
						text: root.throttleText
				Slider:
					min: 0.0
					max: 1.0
					value: 0.0
					on_touch_move: root.OnChangeThrottle(self.value)

		GridLayout:
			size_hint_y: 2

			rows: 2
			cols: 2
			Button:
				id: acc_calibration
				text: "ACC_CALIBRATION"
				on_press: root.OnAccCalibrationButton()
			Button:
				id: mag_calibration
				text: "MAG_CALIBRATION"
				on_press: root.OnMagCalibrationButton()
			Button:
				id: arm
				text: "Arm"
				on_press: root.OnArmButton()
			Button:
				id: disarm
				text: "Disarm"
				on_press: root.OnDisarmButton()